<%= form_for [ list, task], html: { role: "form" } do |f| %>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, rows: 3, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :time_goal %></br>
    <%= f.date_select :time_goal, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit "Save Task", class: 'btn btn-success' %>
  </div>
<% end %>


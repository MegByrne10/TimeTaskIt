<div class="table-responsive">
  <table class="table">
    <tr>
      <th class="col-md-7 white-text">Task</th>
      <th class="col-md-2 centered-text white-text">Time Remaining</th>
      <th class="col-md-1 white-text">Complete</th>
    </tr>

    <% @list.tasks.each do |task| %>
      <tr>
        <td class="col-md-7 list-text"><%= task.description %></td>
        <td class="col-md-2 centered-text"><span class="badge"><%= distance_of_time_in_words(Time.now, task.time_goal) %></span></td>
        <td class="col-md-1"><%= link_to "Done !", task_url_helper(task), method: :delete, class: 'btn btn-primary btn-sm' %></td>
      </tr>
    <% end %>
  </table>
</div>
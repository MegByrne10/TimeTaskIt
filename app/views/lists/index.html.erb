<div class="row">
  <div class="col-md-6 col-md-offset-1">
    <h1>To Do Lists</h1>

    <table class="table table-hover">
      <% @lists.each do |list| %>
        <tr>
          <td class="col-md-8"><%= link_to list.title, list %></td>
          <td class="col-md-1"><span class="badge"><%= list.tasks.count %></span></td>
          <td class="col-md-1"><%= link_to "New Task", new_list_task_path(list_id: list.id), class: 'btn btn-success btn-xs' %></td>
          <td class="col-md-1"><%= link_to "Edit", edit_list_path(list), class: 'btn btn-info btn-xs' %></td>
          <td class="col-md-1"><%= link_to "Remove", list_path(list), method: :delete, class: 'btn btn-danger btn-xs' %></td>
        </tr>
      <% end %>
    </table>
    <%= link_to "New List", new_list_path, class: 'btn btn-primary' %>
  </div>
  <div class="col-md-5">
  </div>
</div>
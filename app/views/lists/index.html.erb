<div class="row">
  <div class="col-md-6 col-xs-12">
    <h1>To Do Lists</h1>
    <div class="table-responsive">
      <table class="table table-hover">
        <% @lists.each do |list| %>
          <tr>
            <td class="col-md-10 list-text"><%= link_to list.title, list %></td>
            <td class="col-md-1"><span class="badge"><%= list.tasks.count %></span></td>
            <td class="col-md-1"><%= link_to "Remove", list_path(list), method: :delete, class: 'btn btn-danger btn-xs' %>     
            </td>
          </tr>
        <% end %>
      </table>
    </div>
    <%= link_to "New List", new_list_path, class: 'btn btn-primary' %>
  </div>
  <div class="col-md-5 col-md-offset-1 col-xs-12">
    <h1>Upcomming Tasks</h1>
    <div class="table-responsive">
      <table class="table table-hover">
        <tr>
          <th class="col-md-8 white-text">Task</th>
          <th class="col-md-3 white-text">List</th>
          <th class="col-md-1 white-text">Time</th>
        </tr>

        <% @tasks.each do |task| %>
          <tr>
            <td class="col-md-8 list-text"><%= task.description %></td>
            <td class="col-md-3"><%= task.list.title %></td>
            <td class="col-md-1"><span class="badge"><%= distance_of_time_in_words(Time.now, task.time_goal) %></span>     
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-4">
    <div class="row breather">
      <h1 class="centered-text"><%= @list.title %></h1>
      <div class="col-md-6 col-md-offset-3 breather-lg">
        <%= link_to "Edit", edit_list_path(@list), class: 'btn btn-info' %>
        <%= link_to "Back", lists_path, class: 'btn btn-primary' %>
      </div>
    </div>
    <div class="row breather-lg">
      <div class="col-md-6 col-md-offset-3">
        <%= render partial: 'tasks/form', locals: { list: @list, task: @task } %>
      </div>
    </div>
  </div>
  <div class="col-md-8 breather-xl">
    <%= render partial: 'tasks/task', locals: { list: @list } %>
  </div>
</div>